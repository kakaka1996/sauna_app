<header class="bg-sky-300 py-4">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-baseline  text-white ">
        <%= link_to "アプリ名", root_path, class: "text-3xl hover:font-bold" %>
        <% if user_signed_in? %>
        <div class="inline-block gap-4">
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:font-bold" %>
        </div>
        
        <% else%>
        <div class="inline-block gap-4">
            <%= link_to "新規登録", new_user_registration_path, data: { turbo: false }, class: "hover:font-bold" %>
            <%= link_to "ログイン", new_user_session_path, data: { turbo: false }, class: "hover:font-bold" %>
            
        </div>
        <% end %>
    </div>
</header>