<h2 class="flex flex-col place-items-center mt-20 font-bold">ログイン</h2>

<div class="flex flex-col items-center mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>
</div>

<div class="container flex flex-col items-center mx-auto">
  <div class="field mb-5 ">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, class: "border-2 border-black mt-3 ", autocomplete: "email" %>
  </div>

  <div class="field mb-5">
    <%= f.label :password, 'パスワード'%><br />
    <%= f.password_field :password, class: "border-2 border-black mt-3", autocomplete: "current-password" %>
  </div>

  <%# <% if devise_mapping.rememberable?
    <div class="field">
      <%= f.check_box :remember_me 
 
       f.label :remember_me 
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: " py-1 px-3  border-2 border-black rounded cursor-pointer transition duration-150 active:scale-95 active:bg-gray-200" %>
  </div>
<% end %>

</div>

